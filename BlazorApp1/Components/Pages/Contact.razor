@code {
    private int currentCount = 0;
    string text = ""; 
    string divText = "";
    string textme = "";
    [Parameter]
    public int incrementAmount { get; set; } = 100;
    // هنا انا بعمل انجيكت علشان اوصل لل النفجيت مانجير 
    [Inject]
    private NavigationManager navigationManager { get; set; }
    private void IncrementCount()
    {
        currentCount+= incrementAmount;
    }
    private void LinkedInConnect()
    {
        navigationManager.NavigateTo("https://www.linkedin.com/in/mahmoudshaddad0/");
    }
    private void GithubConnect()
    {
        navigationManager.NavigateTo("https://github.com/mahmoudshaddad");

    }
    private void EmailConntect()
    {
        navigationManager.NavigateTo("mailto:mahmoudshaddad0@gmail.com");

    }
    private void HandleInput(ChangeEventArgs e)
    {
        text = (string)e.Value!;
    }
    private void MouseOVer(MouseEventArgs e)
    {
        divText= "you are over this";

    }
    private void HandlekeyDown(KeyboardEventArgs e)
    {
        text= e.Key;

    }
    private void HandleOnFoucs(FocusEventArgs e)
    {
        textme = "You are typing.... here";

    }
    private void ohblurr(FocusEventArgs e)
    {
        textme = "You are not typing.... why you clicked away";

    }
}
