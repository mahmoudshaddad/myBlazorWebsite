@page "/Contact"
@rendermode InteractiveServer

<PageTitle>Contact </PageTitle>

<h1>Contact</h1>

<p role="status">Current count: @currentCount</p>
<div class="d-flex flex-column gap-2">
<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="LinkedInConnect">LinkedIn</button>
<button class="btn btn-primary" @onclick="GithubConnect">Github</button>
<button class="btn btn-primary" @onclick="EmailConntect">Email</button>
</div>
<div class="m-4">
    <input type="text" @bind="text" @bind:event="oninput"/>
    <p>@text </p>
</div>

